<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="classpath:mykit/serial/mykit-serial-service.properties"/>
    </bean>

    <bean id="serialNumberServiceIpConfigurable" class="io.mykit.serial.service.factory.SerialNumberServiceFactoryBean" init-method="init">
        <property name="providerType" value="IP_CONFIGURABLE"/>

        <property name="ips" value="${mykit.serial.ips}"/>
    </bean>

</beans>